<view class="container">
    <view class="static">
        <image class="sedan" src="/resources/sedan.png"/>
        <view class="margin-top">
            <view>驾驶安全是用户的责任</view>
            <view>请将车辆停放在停车位内</view>
        </view>
    </view>
    <view class="avatar-container">
        <button wx:if="{{!hasUserInfo}}" class="cu-avatar round lg bg-grey margin-xs" bindtap="onGetUserInfo">
            <text class="cuIcon-people"></text>
        </button>
        <image class="cu-avatar round lg bg-grey margin-xs" wx:if="{{hasUserInfo}}" src="{{avatarURL}}" />
        <view class="margin-top">实时展示我的头像</view>
    </view>
    <button class="bg-grey lg" style="width:80%">立即开锁</button>
</view>
